<?xml version="1.0" encoding="utf-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>User</web-resource-name>
            <url-pattern>/main/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>user</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/WEB-INF/login/login.jsp</form-login-page>
            <form-error-page>/WEB-INF/login/error.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <!--TODO add in program setMaxInactiveInterval(int sec)-->
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filters.EncodingFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LogInFilter</filter-name>
        <filter-class>filters.LogInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogInFilter</filter-name>
        <url-pattern>/main/*</url-pattern>
        <url-pattern>/main</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RegistrationEntranceFilter</filter-name>
        <filter-class>filters.registration.EntranceFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>RegistrationEntranceFilter</filter-name>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>EducationProcessFilter</filter-name>
        <filter-class>filters.EducationProcessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EducationProcessFilter</filter-name>
        <url-pattern>/main</url-pattern>
        <url-pattern>/main/*</url-pattern>
    </filter-mapping>

</web-app>